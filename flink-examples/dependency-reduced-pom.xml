      <artifactId>flink-clients</artifactId>
      <version>1.16.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>flink-optimizer</artifactId>
          <groupId>org.apache.flink</groupId>
        </exclusion>
        <exclusion>
          <artifactId>flink-runtime</artifactId>
          <groupId>org.apache.flink</groupId>
        </exclusion>
        <exclusion>
